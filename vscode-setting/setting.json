{
    // ----------- Workbench Settings -----------
    "workbench.startupEditor": "none", // Disable the welcome page on startup
    "workbench.sideBar.location": "right", // Place the sidebar on the right side
    "workbench.iconTheme": "a-file-icon-vscode", // Set the workbench icon theme
    "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme", // Set product icon theme
    "workbench.settings.editor": "json", // Use JSON format for settings editor
    "workbench.colorTheme": "Gruvbox Dark Soft", // Set the color theme for the workbench
    "workbench.tree.indent": 14, // Set tree view indentation
    "workbench.tree.renderIndentGuides": "onHover", // Render indent guides on hover
    "workbench.editor.editorActionsLocation": "titleBar", // Place editor actions in the title bar

    // ----------- Editor Settings -----------
    "editor.fontFamily": "JetBrains Mono Light, Fira Code", // Set the font family for the editor
    "editor.fontLigatures": true, // Enable font ligatures for the editor
    "editor.fontSize": 16, // Set the font size for the editor (in pixels)
    "editor.minimap.enabled": false, // Disable the minimap
    "editor.unicodeHighlight.nonBasicASCII": false, // Disable highlighting of non-basic ASCII characters
    "editor.occurrencesHighlight": "off", // Disable occurrences highlighting
    "editor.showFoldingControls": "never", // Disable folding control visibility
    "editor.glyphMargin": false, // Hide glyph margin
    "editor.folding": false, // Disable folding

    // ----------- Rulers -----------
    "editor.rulers": [
        {
            "column": 110,
            "color": "#684e4e" // Add a visual column ruler at 110 characters
        }
    ],

    // ----------- Comment Styling -----------
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment", // Apply styling to comments
                "settings": {
                    "foreground": "#888a87", // Set comment text color
                    "fontStyle": "italic" // Use italic font for comments
                }
            }
        ]
    },

    // ----------- Python-Specific Settings -----------
    "[python]": {
        "editor.formatOnSave": true, // Automatically format Python files on save
        "editor.defaultFormatter": "ms-python.black-formatter", // Use Black as the default formatter
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit" // Apply all explicit fixes on save
        },
        "editor.rulers": [
            {
                "column": 72,
                "color": "#684e4e" // Visual ruler for 72 characters
            },
            {
                "column": 79,
                "color": "#4b5c59" // Visual ruler for 79 characters
            }
        ]
    },

    // ----------- Terminal Settings -----------
    "terminal.integrated.cursorBlinking": true, // Enable cursor blinking in the terminal
    "terminal.integrated.cursorStyle": "underline", // Set the cursor style to underline
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono", // Set terminal font
    "terminal.integrated.fontSize": 14, // Set the terminal font size (in pixels)
    "terminal.integrated.defaultProfile.linux": "zsh", // Default terminal profile for Linux
    "terminal.integrated.defaultProfile.windows": "PowerShell", // Default terminal profile for Windows

    // ----------- Git and SCM Settings -----------
    "scm.defaultViewMode": "tree", // Use a tree view for source control management
    "git.confirmSync": false, // Disable confirmation dialog when syncing Git
    "git.autofetch": true, // Automatically fetch updates from remote repositories

    // ----------- Debug Settings -----------
    "debug.terminal.clearBeforeReusing": true, // Clear the debug terminal before reuse

    // ----------- Explorer Settings -----------
    "explorer.confirmDragAndDrop": false, // Disable the drag-and-drop confirmation dialog
    "explorer.compactFolders": false, // Disable folder compacting in explorer
    "explorer.confirmDelete": false, // Disable delete confirmation dialog

    // ----------- Remote SSH Settings -----------
    "remote.SSH.remotePlatform": {
        "172.16.141.10": "linux", // Define remote platform for SSH
        "172.16.141.128": "linux",
        "172.16.141.137": "linux"
    },

    // ----------- Spell Checker Settings -----------
    "cSpell.userWords": [
        "Asif", // Custom word for spell checking
        "netmiko",
        "Syed"
    ],

    // ----------- Tabnine Settings -----------
    "tabnine.experimentalAutoImports": true, // Enable experimental auto-imports with Tabnine

    // ----------- Indent Rainbow Settings -----------
    "indentRainbow.indicatorStyle": "light", // Use light mode for indent guides
    "indentRainbow.lightIndicatorStyleLineWidth": 1, // Set indent guide line width to 1 pixel
    "indentRainbow.errorColor": "rgba(102, 44, 44, 0.6)", // Error color for indent guides
    "indentRainbow.colors": [
        "rgba(255,255,64,0.3)", // First indent color
        "rgba(91, 214, 91, 0.3)", // Second indent color
        "rgba(214, 78, 214, 0.3)", // Third indent color
        "rgba(60, 216, 216, 0.3)" // Fourth indent color
    ],

    // ----------- Window Settings -----------
    "window.density.editorTabHeight": "compact", // Use compact tab height
    "window.commandCenter": false, // Disable the command center

    // ----------- Color Customizations -----------
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#e2df1e", // Indent guides color
        "editorWhitespace.foreground": "#cf4e4e", // Whitespace marker color
        "editor.background": "#1f1f25", // Editor background color
        "sideBar.background": "#1e1f2c", // Sidebar background color
        "activityBar.background": "#35374b", // Activity bar background color
        "statusBar.background": "#2e2e33", // Status bar background color
        "titleBar.activeBackground": "#35374b", // Active title bar background color
        "terminal.background": "#151620", // Terminal background color
        "editorLineNumber.activeForeground": "#ad7d46", // Active line number color
        "editorLineNumber.foreground": "#486661", // Line number color
        "tab.activeBackground": "#4d4d64", // Active tab background color
        "tab.activeBorderTop": "#ad7d46", // Active tab top border color
        "tab.inactiveBackground": "#212124", // Inactive tab background color
        "tab.border": "#7881df", // Tab border color
        "editorGroupHeader.tabsBackground": "#272835", // Tabs group header background
        "editorGroupHeader.border": "#9397cc" // Editor group header border color
    },

    // ----------- Miscellaneous Settings -----------
    "breadcrumbs.enabled": false, // Disable breadcrumbs
    "files.autoSave": "onWindowChange", // Automatically save files when window focus changes
    "files.trimTrailingWhitespace": true,
}
