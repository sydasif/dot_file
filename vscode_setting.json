{
    // Disable the welcome page on startup
    "workbench.startupEditor": "none",

    // Use JSON for the settings editor
    "workbench.settings.editor": "json",

    // Run code in the terminal using Code Runner extension
    "code-runner.runInTerminal": true,

    // Open the default settings when opening settings
    "workbench.settings.openDefaultSettings": true,

    // Set the terminal font to "CaskaydiaCove NF"
    "terminal.integrated.fontFamily": "CaskaydiaCove NF",

    // Set the terminal font size to 15
    "terminal.integrated.fontSize": 15,

    // Use independent color pools for each bracket type
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

    // Set the editor font to "CaskaydiaCove NF"
    "editor.fontFamily": "CaskaydiaCove NF",

    // Render whitespace characters at the boundary
    "editor.renderWhitespace": "boundary",

    // Set the color theme to "Predawn"
    "workbench.colorTheme": "Predawn",

    // Clear the debug terminal before reusing it
    "debug.terminal.clearBeforeReusing": true,

    // Enable cursor blinking in the terminal
    "terminal.integrated.cursorBlinking": true,

    // Set the terminal cursor style to underline
    "terminal.integrated.cursorStyle": "underline",

    // Customize workbench colors (add your custom settings here)
    "workbench.colorCustomizations": {},

    // Auto lock groups for markdown previews
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },

    // Use tree view for Source Control Management
    "scm.defaultViewMode": "tree",

    // Automatically update extensions
    "extensions.autoUpdate": true,

    // Set the icon theme to "material-icon-theme"
    "workbench.iconTheme": "material-icon-theme",

    // Place the sidebar on the right
    "workbench.sideBar.location": "right",

    // Disable the minimap in the editor
    "editor.minimap.enabled": false,

    // Disable breadcrumbs in the editor
    "breadcrumbs.enabled": false,

    // Disable confirmation dialog when syncing Git
    "git.confirmSync": false,

    // Set the window zoom level to 1.4
    "window.zoomLevel": 1.4,

    // Python-specific editor settings
    "[python]": {
        // Use Black as the default formatter
        "editor.defaultFormatter": "ms-python.black-formatter",

        // Format Python files on save
        "editor.formatOnSave": true
    },

    // SSH remote platform configuration
    "remote.SSH.remotePlatform": {
        "192.168.71.101": "linux"
    },

    // Add custom words to the spell checker
    "cSpell.userWords": [
        "dotenv"
    ],

    // Set the default terminal profile for Windows
    "terminal.integrated.defaultProfile.windows": "Windows PowerShell",

    // Set the default terminal profile for Linux
    "terminal.integrated.defaultProfile.linux": "bash",

    // Define terminal profiles for Windows
    "terminal.integrated.profiles.windows": {
        // PowerShell profile
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        // Command Prompt profile
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        // Git Bash profile
        "Git Bash": {
            "source": "Git Bash"
        },
        // Windows PowerShell profile
        "Windows PowerShell": {
            "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
        }
    }
}
